# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=crlf
*.pyx text eol=crlf
*.pyi text eol=crlf

# Config files
*.toml text eol=crlf
*.yaml text eol=crlf
*.yml text eol=crlf
*.json text eol=crlf
*.ini text eol=crlf
*.cfg text eol=crlf

# Documentation
*.md text eol=crlf
*.rst text eol=crlf
*.txt text eol=crlf
LICENSE text eol=crlf

# Shell scripts
*.sh text eol=crlf
*.bash text eol=crlf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.whl binary
*.egg binary
*.pyc binary
*.pyd binary
*.so binary
*.dll binary
*.exe binary
*.zip binary
*.tar.gz binary
